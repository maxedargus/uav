<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/layoutMain"
        android:paddingBottom="10dp"
        android:background="#1B1B1B">

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textSize="13.9dp"
            android:layout_marginBottom="10dp"
            android:text="please fill in your phone number"/>






        <EditText
            android:layout_width="match_parent"
            android:layout_below="@id/text"
            android:id="@+id/numberbox"
            android:maxLength="11"
            android:background="#ffffff"
            android:inputType="number"
            android:hint=""
            android:digits="0123456789"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/applynumber"
            android:layout_width="match_parent"
            android:layout_below="@+id/numberbox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13.9dp"
            android:background="#423B3B"
            android:textColor="#ffffff"
            android:text="apply number"/>





        <TextView
            android:id="@+id/close"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:layout_below="@+id/applynumber"

            android:text="close"/>





    </RelativeLayout>


</RelativeLayout>